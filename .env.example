# Application
APP_NAME=AIOps Agent Executor
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/aiops_agent_executor
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=change-me-in-production-with-a-secure-random-key
ENCRYPTION_KEY=dev-encryption-key-32-bytes!!

# Token
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console

# LLM Providers (optional defaults)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
